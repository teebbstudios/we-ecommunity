<!--pages/mine/mine.wxml-->
<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">
    <view class="avatar flex flex-direction align-center">
      <view class="cu-avatar round xl bg-gray">
        <text class="cuIcon-people"></text>
      </view>
      <!-- <image class="cu-avatar round xl bg-gray" src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="aspectFill"></image> -->
      <view class="text-xl">点击登录</view>
    </view>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-orange">
        <text class="cuIcon-home"></text>
      </view>
      <view class="text-sm">我的家庭</view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-blue">
        <text class="cuIcon-qrcode"></text>
      </view>
      <view class="text-sm">个人二维码</view>
    </view>
    <!-- <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">{{forksCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-fork"></text> Fork</view>
    </view> -->
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" >
        <text class="cuIcon-people text-blue"></text>
        <text class="text-grey">个人信息</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content">
        <text class="cuIcon-time text-cyan"></text>
        <text class="text-grey">我的预约</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-message text-red"></text>
        <text class="text-grey">意见建议</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-delete text-grey"></text>
        <text class="text-grey">清除缓存</text>
      </view>
    </view>
  </view>
  <view class="flex justify-center">
    <text class="text-sm text-grey">当前版本号：1.0.1</text>
  </view>
</scroll-view>