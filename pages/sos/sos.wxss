/* pages/sos/sos.wxss */
.list-wrapper {
  height: calc(50vh - 140rpx);
}

.list-wrapper .name{
  font-weight: bold;
  min-width: calc(3em + 48rpx);
}

.item {
  position: relative;
}

.item .close{
  position: absolute;
  right: 3%;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
}

.call{
  height: 43vh;
  padding-bottom: 2vh;
}

.call button.cu-btn{
  width: 200rpx;
  height: 200rpx;
}