/* pages/authentication/frontOfIDCard/frontOfIDCard.wxss */
.camera_box {
  height: 100vh;
  width: 100vw;
  position: relative;
}

.camera {
  height: 800rpx;
  width: 650rpx;
  margin: auto;
  margin-top: calc((85vh - 800rpx)/2);
  margin-bottom: calc((85vh - 800rpx)/2);
  z-index: 1;
}

.id_m {
  height: 800rpx;
  width: 650rpx;
  z-index: 999;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  position: absolute;
}

.id_m .img {
  width: 550rpx;
  height: 700rpx;
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto auto;
  top: 0;
  bottom: 0;
}

.camera_box .action {
  height: 15vh;
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.camera_img {
  margin-left: calc((100vw - 650rpx)/2);
  margin-right: calc((100vw - 650rpx)/2);
  margin-top: calc((85vh - 800rpx)/2);
  margin-bottom: calc((85vh - 800rpx)/2);
  height: 800rpx;
  width: 650rpx;
}

.id_m .tips_txt {
  position: absolute;
  left: 50%;
  bottom: 8%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  height: 35rpx;
  text-align: center;
  font-size: 34rpx;
  color: #EA952F;
  font-weight: 500;
}