/* components/people-info/info.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.container {
  display: flex;
  flex-wrap: wrap;
}

.container .col-4 {
	width: calc((100vw - 64rpx) * 4 / 12 );
}

.container .col-8 {
	width: calc((100vw - 64rpx) * 8 / 12);
}

.container .col-6 {
	width: calc((100vw - 64rpx) * 6 / 12);
}

.container .col-12 {
	width: calc(100vw - 64rpx);
}

.selfie{
  overflow: hidden;
}

.selfie image{
  max-height: 240rpx;
}

.info-row{
  padding-top: 14rpx;
  padding-bottom: 14rpx;
}

.label {
  font-weight: bold;
  min-width: calc(4em + 48rpx);
}
